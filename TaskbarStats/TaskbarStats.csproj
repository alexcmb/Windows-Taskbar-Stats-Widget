<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Description>A lightweight widget for displaying CPU and GPU temperatures in the Windows taskbar area.</Description>
    <Authors>Alex</Authors>
    <Product>TaskbarStatsWidget</Product>
    <Copyright>Copyright © 2026</Copyright>
    <Version>1.0.0</Version>
    <ApplicationIcon>monitor.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibreHardwareMonitorLib" Version="0.9.5" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="monitor.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
