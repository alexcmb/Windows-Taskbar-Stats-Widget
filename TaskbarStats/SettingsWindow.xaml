<Window x:Class="TaskbarStats.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taskbar Stats Settings" Height="500" Width="320"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button" x:Key="ColorButtonStyle">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="General Appearance">
                    <StackPanel>
                        <Grid Margin="0,2">
                            <TextBlock Text="Background Color:"/>
                            <Button x:Name="BtnBgColor" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                        </Grid>
                        
                        <Grid Margin="0,2">
                            <TextBlock Text="Text Color:"/>
                            <Button x:Name="BtnTextColor" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Temperature Colors &amp; Thresholds">
                    <StackPanel>
                        <TextBlock Text="Warning Threshold (°C):"/>
                        <TextBox x:Name="TxtCpuWarn" />
                        
                        <Grid Margin="0,2">
                            <TextBlock Text="Warning Color:"/>
                            <Button x:Name="BtnColorWarn" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                        </Grid>

                        <TextBlock Text="Critical Threshold (°C):"/>
                        <TextBox x:Name="TxtCpuCrit" />
                        
                        <Grid Margin="0,2">
                            <TextBlock Text="Critical Color:"/>
                            <Button x:Name="BtnColorCrit" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Tray Icon Settings">
                    <StackPanel>
                        <Grid Margin="0,2">
                            <TextBlock Text="CPU Label Color:"/>
                            <Button x:Name="BtnTrayCpuLabel" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                        </Grid>
                        <Grid Margin="0,2">
                            <TextBlock Text="GPU Label Color:"/>
                            <Button x:Name="BtnTrayGpuLabel" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                        </Grid>
                        <Grid Margin="0,2">
                            <TextBlock Text="Value Text Color:"/>
                            <Button x:Name="BtnTrayText" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="70" Height="25" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="70" Height="25" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
