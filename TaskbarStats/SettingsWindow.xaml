<Window x:Class="TaskbarStats.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taskbar Stats Settings" SizeToContent="Height" Width="340"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button" x:Key="ColorButtonStyle">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <GroupBox Header="General" Margin="0,0,0,10">
                <StackPanel>
                    <Grid Margin="0,4">
                        <TextBlock Text="Background Color:"/>
                        <Button x:Name="BtnBgColor" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                    </Grid>

                    <Grid Margin="0,4">
                        <TextBlock Text="Start with Windows:"/>
                        <CheckBox x:Name="ChkStartWithWindows" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,5"/>
                    </Grid>
                    
                    <Grid Margin="0,4">
                        <TextBlock Text="Text Color:"/>
                        <Button x:Name="BtnTextColor" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Thresholds &amp; Colors" Margin="0,0,0,10">
                <StackPanel>
                    <Grid Margin="0,4">
                        <TextBlock Text="Warning Text Color:" VerticalAlignment="Center"/>
                        <Button x:Name="BtnColorWarn" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                    </Grid>
                    <Grid Margin="0,0,0,4">
                         <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Trigger at (°C): " VerticalAlignment="Center"/>
                            <TextBox x:Name="TxtCpuWarn" Width="50" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>

                    <Separator Margin="0,5" Background="#444"/>

                    <Grid Margin="0,4">
                         <TextBlock Text="Critical Text Color:" VerticalAlignment="Center"/>
                         <Button x:Name="BtnColorCrit" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                    </Grid>
                    <Grid Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Trigger at (°C): " VerticalAlignment="Center"/>
                            <TextBox x:Name="TxtCpuCrit" Width="50" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Tray Icon" Margin="0,0,0,10">
                <StackPanel>
                    <Grid Margin="0,4">
                        <TextBlock Text="CPU Label Color:"/>
                        <Button x:Name="BtnTrayCpuLabel" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                    </Grid>
                    <Grid Margin="0,4">
                        <TextBlock Text="GPU Label Color:"/>
                        <Button x:Name="BtnTrayGpuLabel" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                    </Grid>
                    <Grid Margin="0,4">
                        <TextBlock Text="Value Color:"/>
                        <Button x:Name="BtnTrayText" Style="{StaticResource ColorButtonStyle}" Click="ColorButton_Click"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Save" Width="80" Height="28" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="80" Height="28" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
